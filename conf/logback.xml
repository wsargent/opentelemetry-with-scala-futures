<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5r %highlight(%-5level) trace_id=%mdc{trace_id} span_id=%mdc{span_id} %logger - %message%n%xException{10}</pattern>
        </encoder>
    </appender>

    <logger name="io.opentelemetry" level="INFO" />
    <logger name="services" level="INFO" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>